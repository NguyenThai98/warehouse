                </div>
                <div class="col-3">
                    <ul class="menu">
                        <li class="nav info">
                            {{#if lcIsAuthenticated}}
                                {{#if lcAuthUser}}
                                     <div class="menu_info">
                                         {{#if (eq check_avatar true)}}
                                             <img src="/public/img/avt_detail.png" width="25px" height="25px" alt="avatar">
                                         {{else}}
                                             <img src="/public/img/{{lcAuthUser.avatar}}" width="25px" height="25px" alt="avatar">
                                         {{/if}}
                                      
                                        <span><a href="/user/info" class="full_name_header">{{lcAuthUser.full_name}}</a></span>
                                    </div>
                                    <div class="login">
                                        <a href="/user/logout">Đăng Xuất</a>
                                    </div>
                                    {{else}}
